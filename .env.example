# Sentinel-1 Change Detection Monitor - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# GOOGLE EARTH ENGINE CONFIGURATION
# =============================================================================
# Your Google Cloud Project ID with Earth Engine API enabled
# Get this from: https://console.cloud.google.com/
# Run 'earthengine authenticate' to set up GEE credentials
GEE_PROJECT_ID=your-project-id-here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite database path (relative or absolute)
# Default: sqlite:///osint_monitor.db
DATABASE_URL=sqlite:///osint_monitor.db

# =============================================================================
# FLASK WEB SERVER CONFIGURATION
# =============================================================================
# Base URL for the web application (used in notification links)
# Examples:
#   - Local development: http://localhost:5000
#   - Production: https://yourdomain.com
BASE_URL=http://localhost:5000

# Flask host binding
# Use 0.0.0.0 to allow external connections, 127.0.0.1 for localhost only
FLASK_HOST=0.0.0.0

# Flask port number
FLASK_PORT=5000

# Enable Flask debug mode (true/false)
# WARNING: Never enable debug mode in production!
DEBUG=false

# =============================================================================
# WEBHOOK NOTIFICATIONS (OPTIONAL)
# =============================================================================
# Webhook URL for Slack notifications
# Get this from: https://api.slack.com/messaging/webhooks
# WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Webhook URL for Discord notifications
# Get this from: Server Settings > Integrations > Webhooks
# WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# Webhook type: slack or discord
# WEBHOOK_TYPE=discord

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# How often to check for new images (in hours)
# Default: 24 (check daily)
CHECK_INTERVAL_HOURS=24

# Minimum change area threshold (in square kilometers)
# Changes smaller than this will not trigger notifications
# Default: 0.1
MIN_CHANGE_AREA_KM2=0.1

# Minimum change percentage threshold
# Changes smaller than this percentage will not trigger notifications
# Default: 5.0
MIN_CHANGE_PCT=5.0
